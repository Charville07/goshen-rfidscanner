    dns.resolve('goshencybernetics.com', function(err) {
      if (err) {
        console.log("No connection");
        io.emit('device_status', ('OFFLINE'));
      } else {
        console.log("Connected");
        io.emit('device_status', ('ONLINE'));
      }
    }); 

    console.log('Scanner 2');
    //---------------------------------------- Query start -----------------------------------------------------------------------
